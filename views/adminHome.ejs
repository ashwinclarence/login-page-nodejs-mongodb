<%-include('header')%>
    <%-include('adminNav')%>
        <div class="admin-home-container">
            <div class="user-manage-header">
                <h2>Users List</h2>
            </div>
            <div class="admin-search-box">
                <form action="/admin/home" method="get">
                    <input type="text" name="adminSearch" placeholder="Search" id="admin-input-box">
                    <button class="btn btn-info" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                    
                </form>
            </div>
            <div class="admin-add-user">
                <a class="btn btn-success " href="/admin/addUser">Add New User <i class='bx bx-user-plus' ></i></a>
            </div>
            <div class="admin-user-view">
                <table>
                    <thead>
                        <tr>
                            <th>sl</th>
                            <th>User id</th>
                            <th>User Name</th>
                            <th>Mail id</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% user.forEach((user,index)=>{ %>
                            <tr>
                                <th>
                                    <%= index+1 %>
                                </th>
                                <td>
                                    <%= user.id %>
                                </td>
                                <td>
                                    <%= user.name %>
                                </td>
                                <td>
                                    <%= user.email %>
                                </td>
                                <td>
                                    <a class="btn btn-secondary" href="/admin/edit/<%=user.id%>">Edit</a>
                                    <a class="btn btn-danger" href="/admin/userDelete/<%= user.id%>" onclick="return confirmDelete();">Delete</a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        <script>
            function confirmDelete() {
                return confirm("Are you sure you want to delete this user?");
            }
        </script>
        
        <%-include('footer')%>